.note-editor
  position: relative



  .note-dropzone
    position: absolute
    display: none
    z-index: 100
    color: $dropzone-color
    opacity: 0.95
    width: 100%
    height: 100%

    .note-dropzone-message
      display: table-cell
      vertical-align: middle
      text-align: center
      font-size: 28px


    &.hover
      color: $dropzone-active-color



  &.dragover .note-dropzone
    display: table


  .note-editing-area
    position: relative
    width: 100%

    .note-editable
      outline: none

      sup
        vertical-align: super


      sub
        vertical-align: sub



.note-editor.note-frame

  &.codeview
    .note-editing-area
      .note-editable
        display: none

      .note-codable
        display: block


  .note-editing-area
    overflow: hidden

    .note-editable
      background: $scheme.dark.background.light
      background: linear-gradient(to bottom right, $scheme.dark.background.light, $scheme.dark.background.lighter)
      color: $scheme.light.color.default
      padding: 1rem
      height: 15rem
      overflow: auto
      font-family: "Helvetica", "Arial", "sans-serif"

      &[contenteditable="false"]
        background-color: $scheme.dark.background.light



    .note-codable
      display: none
      width: 100%
      padding: 10px
      border: none
      box-shadow: none
      font-family: Menlo, Monaco, monospace, sans-serif
      font-size: 14px
      color: #ccc
      background-color: #222
      resize: none

      @include box-sizing(border-box)
      @include rounded(0)
      margin-bottom: 0



  &.fullscreen
    position: fixed
    top: 0
    left: 0
    width: 100% !important
    z-index: 1050

    .note-toolbar
      margin-top: $navbar['height']
      background-color: $scheme.dark.background.darker
    .note-editable
      background-color: $scheme.dark.background.dark

    .note-toolbar
    .note-editable
      backdrop-filter: blur(7px)
      -webkit-backdrop-filter: blur(7px)

    .note-resizebar
      display: none



  .note-statusbar
    background-color: $background-color
    border-bottom-left-radius: 4px
    border-bottom-right-radius: 4px
    .note-resizebar
      padding-top: 1px
      height: 8px
      width: 100%
      cursor: ns-resize
      .note-icon-bar
        width: 20px
        margin: 1px auto
        border-top: 1px solid $border-color



  .note-placeholder
    padding: 10px



.note-popover.popover
  display: none
  max-width: none
  .popover-content
    a
      display: inline-block
      max-width: 200px
      overflow: hidden
      text-overflow: ellipsis
      white-space: nowrap
      vertical-align: middle


  .arrow
    left: 20px !important



.note-popover .popover-content
.note-toolbar
  padding: 1rem
  margin-bottom: -0.33rem

  & > .btn-group
    margin-left: 0
    margin-right: 0

  .btn-group
    display: inline-block
    position: relative
    margin-right: 0.5rem
    margin-bottom: 0.33rem
    .btn
      padding-left: 1rem
      padding-right: 1rem

    .note-table
      min-width: 0
      padding: 1rem
      .note-dimension-picker
        font-size: 18px
        .note-dimension-picker-mousecatcher
          position: absolute !important
          z-index: 3
          width: 10em
          height: 10em
          cursor: pointer

        .note-dimension-picker-unhighlighted
          border: 1px solid $scheme.light.background.light
          position: relative !important
          z-index: 1
          width: 5em
          height: 5em
          // background-image: url('data:image/pngbase64,iVBORw0KGgoAAAANSUhEUgAAABIAAAASAgMAAAAroGbEAAAACVBMVEUAAIj4+Pjp6ekKlAqjAAAAAXRSTlMAQObYZgAAAAFiS0dEAIgFHUgAAAAJcEhZcwAACxMAAAsTAQCanBgAAAAHdElNRQfYAR0BKhmnaJzPAAAAG0lEQVQI12NgAAOtVatWMTCohoaGUY+EmIkEAEruEzK2J7tvAAAAAElFTkSuQmCC') repeat

        .note-dimension-picker-highlighted
          border: 1px solid $scheme.light.background.dark
          position: absolute !important
          z-index: 2
          width: 1em
          height: 1em
          // background-image: url('data:image/pngbase64,iVBORw0KGgoAAAANSUhEUgAAABIAAAASAgMAAAAroGbEAAAACVBMVEUAAIjd6vvD2f9LKLW+AAAAAXRSTlMAQObYZgAAAAFiS0dEAIgFHUgAAAAJcEhZcwAACxMAAAsTAQCanBgAAAAHdElNRQfYAR0BKwNDEVT0AAAAG0lEQVQI12NgAAOtVatWMTCohoaGUY+EmIkEAEruEzK2J7tvAAAAAElFTkSuQmCC') repeat


    .note-dimension-display
      padding-top: 0.5rem
      color: $scheme.light.color.default

  .note-style
    .dropdown-menu
      padding: 1rem
      color: $scheme.light.color.default
      pre
        color: $scheme.light.color.default
      blockquote
        padding: 0
    h1, h2, h3, h4, h5, h6, blockquote, pre, p
      margin: 0



  .note-color
    .dropdown-toggle
      width: 20px
      padding-left: 5px

    .dropdown-menu
      min-width: 360px
      .btn-group
        margin: 0
        &:first-child
          margin: 0 5px


        .note-palette-title
          padding: 0.5rem 0
          text-align: center
          color: $scheme.light.color.default
          border-bottom: 1px solid $scheme.light.background.light


        .note-color-reset
          font-size: 12px
          padding: 6px 0
          cursor: pointer
          width: 100%
          box-sizing: border-box


        .note-color-row
          height: 20px


        .note-color-reset:hover
          background: $scheme.dark.background.light





  .note-para
    .dropdown-menu
      min-width: 216px
      padding: 1rem
      &>div:first-child
        margin-right: 5px


  .note-btn::after
    display: none

  .dropdown-menu
    padding: 0.5rem
    min-width: 90px
    &.right
      right: 0
      left: auto
      &::before
        right: 9px
        left: auto !important
      &::after
        right: 10px
        left: auto !important

    &.note-check
      li a i
        color: deepskyblue
        visibility: hidden

      li a.checked i
        visibility: visible

  .note-fontsize-10
    font-size: 10px

  .note-color-palette
    line-height: 1
    margin-right: 0.25rem
    div
      .note-color-btn
        width: 20px
        height: 20px
        padding: 0
        margin: 0
        border: 1px solid transparent

      .note-color-btn:hover
        border: 1px solid #000



.note-dialog
  &>div
    display: none

  .form-group
    margin-left: 0
    margin-right: 0

  .note-modal-form
    margin: 0

  .note-image-dialog
    .note-dropzone
      min-height: 100px
      font-size: 30px
      line-height: 4
      color: lightgray
      text-align: center
      border: 4px dashed lightgray
      margin-bottom: 10px



.note-placeholder
  position: absolute
  display: none
  color: gray


.note-handle
  .note-control-selection
    position: absolute
    display: none
    border: 1px solid black
    &>div  position: absolute

    .note-control-selection-bg
      width: 100%
      height: 100%
      background-color: black
      @include opacity(0.3)


    .note-control-handle
    .note-control-holder
    .note-control-sizing
      width: 7px
      height: 7px
      border: 1px solid black

    .note-control-sizing
      background-color: white


    .note-control-nw
      top: -5px
      left: -5px
      border-right: none
      border-bottom: none


    .note-control-ne
      top: -5px
      right: -5px
      border-bottom: none
      border-left: none


    .note-control-sw
      bottom: -5px
      left: -5px
      border-top: none
      border-right: none


    .note-control-se
      right: -5px
      bottom: -5px
      cursor: se-resize


    .note-control-se.note-control-holder
      cursor: default
      border-top: none
      border-left: none


    .note-control-selection-info
      right: 0
      bottom: 0
      padding: 5px
      margin: 5px
      color: white
      background-color: black
      font-size: 12px
      @include rounded(5px)
      @include opacity(0.7)




.note-hint-popover
  min-width: 100px
  padding: 2px

  .popover-content
    padding: 3px
    max-height: 150px
    overflow: auto

    .note-hint-group
      .note-hint-item
        display: block !important
        padding: 3px

        &.active, &:hover
          display: block
          clear: both
          font-weight: 400
          line-height: 1.4
          color: white
          white-space: nowrap
          text-decoration: none
          background-color: $brand.primary
          outline: 0
          cursor: pointer

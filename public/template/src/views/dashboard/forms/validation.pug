extends ../../layouts/dashboard.pug

block content
  +container-fluid
    +row 
      +col({ lg: 12 })
        +page-heading(server, page)
          
    +row
      +col({ lg: 12 })
        +panel(class='-dark')
          +panel-heading
            h4 Validation Examples
            span A showcase of Volta's form elements
          +panel-body 
            form(class='form -dark' id='form-validation' data-toggle="validator" method="POST" enctype="multipart/form-data")

              +form-group
                label(for='form-validation-required') Required
                input(class='form-control' id='form-validation-required' required="true" name="text" type="text" placeholder="Type something..")

              +form-group
                label(for='form-validation-max') Maximum 6 Characters
                input(class='form-control' id='form-validation-max' data-maxlength="6" name="text" type="text" placeholder="Type something..")
                
              +form-group
                label(for='form-validation-match') Match 4 Characters
                input(class='form-control' id='form-validation-match' data-matchlength="4" name="text" type="password" placeholder="PIN")

              +form-group
                label(for='form-validation-min') Minimum 6 Characters 
                input(class='form-control' id='form-validation-min' data-minlength="6" name="text" type="password" placeholder="Password")

              +form-group
                label(for='form-validation-match-input') Match Other Input
                input(class='form-control' id='form-validation-match-input' data-match="#form-validation-min" name="text" type="password" placeholder="Password Confirmation")

              +form-group
                label(for='form-validation-match-regex') Match RegEx
                input(class='form-control' id='form-validation-match-regex' data-regex="^[0-9]+$" name="text" type="text" placeholder="^[0-9]+$")

              button(class='btn -primary -block' type="submit") Submit

      
